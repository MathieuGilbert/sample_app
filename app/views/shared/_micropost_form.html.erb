<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object%>
  <div class='field'>
    <%= f.text_area :content, :onkeyup => "javascript: UpdateCounter();" %>
  </div>
  <div class='countdown'>
    (<label id='countdown_value'>140</label>)
  </div>
  <div class='actions'>
    <%= f.submit "Submit" %>
  </div>
<% end %>
